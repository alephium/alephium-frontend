    "@types/jest": "^29.4.0",
    "@types/lodash.isplainobject": "^4",
    "@types/node": "^20.14.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "rollup": "^4.12.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
