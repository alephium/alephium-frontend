{
  "name": "@alephium/keyring",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "watch-dev": "tsup --watch",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" --log-level silent",
    "clean": "rm -rf dist .turbo coverage",
    "clean:node-modules": "rm -rf node_modules",
    "typecheck": "tsup"
  },
  "dependencies": {
    "@alephium/encryptor": "workspace:*",
    "@alephium/shared": "workspace:*",
    "@alephium/web3": "2.0.4",
    "@alephium/web3-wallet": "2.0.3",
    "@metamask/scure-bip39": "^2.1.1",
    "blakejs": "^1.1.1",
    "bn.js": "5.2.1",
    "buffer": "^6.0.3",
    "elliptic": "6.6.1",
    "ethereum-cryptography": "^2.1.3"
  },
  "devDependencies": {
    "@alephium/eslint-config": "workspace:*",
    "@alephium/typescript-config": "workspace:*",
    "@types/node": "^20.14.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.48.0",
    "tslib": "^2.3.1",
    "typescript": "~5.8.3",
    "vitest": "^2.1.9"
  }
}
