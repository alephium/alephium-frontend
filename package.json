{
  "name": "alephium-frontend",
  "description": "A monorepo containing all things frontend on Alephium",
  "author": "Alephium dev <dev@alephium.org>",
  "packageManager": "pnpm@8.9.0",
  "private": true,
  "scripts": {
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean-node-modules": "rm -rf node_modules & find ./packages ./apps -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "resolutions": {
    "semver": "^7.5.2"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@alephium/eslint-config": "workspace:*",
    "@alephium/typescript-config": "workspace:*",
    "@changesets/cli": "^2.26.2",
    "@manypkg/cli": "latest",
    "prettier": "^3.0.3",
    "turbo": "latest"
  },
  "pnpm": {
    "patchedDependencies": {
      "framer-motion@10.17.12": "patches/framer-motion@10.17.12.patch",
      "react-native-aes-crypto@2.1.1": "patches/react-native-aes-crypto@2.1.1.patch"
    }
  }
}
