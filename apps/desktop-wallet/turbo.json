{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "env": ["DEV", "VITE_USE_LOCAL_ANNOUNCEMENT_FILE", "VITE_VERSION"]
    },
    "start:electron": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build:electron:windows": {
      "dependsOn": ["build"]
    },
    "build:electron:macos": {
      "dependsOn": ["build"]
    },
    "build:electron:ubuntu": {
      "dependsOn": ["build"]
    },
    "build:electron:linux:arm64": {
      "dependsOn": ["build"]
    }
  }
}
